{% assign link = Model.ContentItem.Content.LinkMenuItemPart %}
{% if Model.HasItems %}
<a class="nav-link dropdown-toggle" href="{{ link.Url | href }}" id="navbarDropdown{{ link.Name | html_class }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    {{ link.Name }}
</a>
{% else %}
<a class="nav-link" href="{{ link.Url | href }}">{{ link.Name }}</a>
{% endif %}