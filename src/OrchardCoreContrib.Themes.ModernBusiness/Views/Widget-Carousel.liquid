{% assign slides = Model.ContentItem.Content.BagPart.ContentItems %}
{% assign id = Model.ContentItem.ContentItemId | html_class %}
<div id="carouselExampleIndicators{{ id }}" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {% for slide in slides %}
        <li data-target="#carouselExampleIndicators{{ id }}" data-slide-to="{{ forloop.index0 }}"{%if forloop.first %} class="active"{% endif %}></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner" role="listbox">
        {% for slide in slides %}
        <div class="carousel-item {%if forloop.first %}active{% endif %}" style="background-image: url('{{ slide.Slide.Image.Paths.first | asset_url | resize_url: width:1900, height:1080 }}')">
            <div class="carousel-caption d-none d-md-block">
                <h3>{{ slide.TitlePart.Title }}</h3>
                <p>{{ slide.Slide.Description.Text }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators{{ id }}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators{{ id }}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>